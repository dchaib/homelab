services:
  traefik:
    image: "traefik:v3.3.6"
    restart: unless-stopped
    command:
      - "--api.dashboard=true"
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
      - "--entrypoints.web.address=:80"
      - "--entrypoints.websecure.address=:443"
      - "--entrypoints.web.http.redirections.entrypoint.to=websecure"
      - "--entrypoints.web.http.redirections.entrypoint.scheme=https"
      - "--certificatesresolvers.ovh.acme.dnschallenge.provider=ovh"
      - "--certificatesresolvers.ovh.acme.dnschallenge.delaybeforecheck=5"
      - "--certificatesresolvers.ovh.acme.email=${EMAIL}"
      - "--certificatesresolvers.ovh.acme.storage=/letsencrypt/acme.json"
    ports:
      - "80:80"
      - "443:443"
    env_file:
      - .env
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
      - "{{ traefik_docker_volumes.letsencrypt }}:/letsencrypt:rw"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.traefik.rule=Host(`traefik.{{ homelab_domain_name }}`)"
      - "traefik.http.routers.traefik.entrypoints=websecure"
      - "traefik.http.routers.traefik.tls=true"
      - "traefik.http.routers.traefik.tls.certresolver=ovh"
      - "traefik.http.routers.traefik.service=api@internal"
