global:
  scrape_interval: 15s  # Scrape metrics every 15 seconds

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
  - job_name: 'freebox'
    static_configs:
      - targets: ['{{ monitoring.freebox_exporter }}:9102']
    fallback_scrape_protocol: 'PrometheusText0.0.4'
    relabel_configs:
      - target_label: 'instance'
        replacement: 'freebox-delta'
  - job_name: 'omada-controller'
    static_configs:
      - targets: ['{{ monitoring.omada_exporter }}:9202']
    relabel_configs:
      - target_label: 'instance'
        replacement: '22A10E-Home'
  - job_name: 'integrations/unix'
    static_configs:
      - targets: ['{{ homeassistant.ip }}:{{ homeassistant.exporter.port }}']
    relabel_configs:
      - target_label: 'instance'
        replacement: 'homeassistant'
  - job_name: 'traefik'
    static_configs:
      - targets: ['traefik:8080']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
  - job_name: 'loki'
    static_configs:
      - targets: ['{{ monitoring.loki }}:3100']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
  - job_name: 'adguard-home'
    static_configs:
      - targets: ['{{ monitoring.adguard_home_exporter }}:9618']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
  - job_name: 'authelia'
    scheme: 'http'
    static_configs:
    - targets: ['authelia:9959']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
  - job_name: 'redis_exporter_targets'
    static_configs:
      - targets:
        - redis://authelia_redis:6379
        - redis://broker:6379
    metrics_path: /scrape
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: '{{ monitoring.redis_exporter }}:9121'
  - job_name: 'redis_exporter'
    static_configs:
      - targets: ['{{ monitoring.redis_exporter }}:9121']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
  - job_name: 'crowdsec'
    static_configs:
      - targets: ['crowdsec:6060']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
  - job_name: 'ntfy'
    static_configs:
      - targets: ['ntfy:9094']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
  - job_name: 'apprise'
    static_configs:
      - targets: ['apprise:8000']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
  - job_name: 'healthchecks'
    metrics_path: /projects/{{ healthchecks.project_id }}/metrics/{{ healthchecks.api_key_ro }}
    static_configs:
      - targets: ['healthchecks:8000']
    relabel_configs:
      - target_label: 'instance'
        replacement: '{{ inventory_hostname_short }}'
